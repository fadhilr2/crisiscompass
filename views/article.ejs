<!DOCTYPE html>

<html>
  <head>
    <%- include('partials/header.ejs') %>
  
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/article.css">
  </head>
  <body>
    <header class="head">
      <div class="-logo">
        <a href="https://<%= hostname %>/"><h1> Crisis Compass</h1></a>
      </div>
    </header>
    <main class="main">
      <div class="-img">
        <img src="<%= thumb %>" alt="">
        <div class="-gradient">
          <div class="-text">
            <h1>
              <%= title %>
            </h1>
            <p><%= description %></p>
          </div>
          <div class="-gap"></div>
        </div>
      </div>
      <article class="article">
        <div>
        </div>
        <div>
          <% content.forEach((data) => { %>
            <% if(data.src){ %>
              <img src="<%= data.src %>" alt="">
            <% } else if(data.title === "") { %>
              <section>
                <p><%= data.text %></p>
              </section>
            <% } else{ %>
              <section>
                <h1><%= data.title %></h1>
                <p><%= data.text %></p>
              </section>
            <% } %>
          <% }) %>
        </div>        
        <div></div>
      </article>
    </main>
  </body>
</html>